<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="Group {name}"
		type="edit"
		xmlns="http://www.skyve.org/xml/view"
		xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<tabPane>
		<tab title="Group">
			<form>
				<column percentageWidth="20" />
				<column />
				<row><item><textField binding="name" /></item></row>
				<row><item><textArea binding="description" wrap="true" /></item></row>
			</form>
		</tab>
		<tab title="Roles">
			<dataGrid pixelWidth="400" pixelHeight="300" binding="roles">
				<boundColumn binding="roleName" title="Role Name" />
			</dataGrid>
		</tab>
	</tabPane>
	<actions>
		<defaults />
	</actions>
</view>
