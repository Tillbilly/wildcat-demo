<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<view title="Update My Details" 
			type="edit" 
			xmlns="http://www.skyve.org/xml/view"
			xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<form invisible="notExists">
		<column percentageWidth="20" />
		<column/>
		<column/>
		<row>
			<item>
				<textField binding="myContact.name" />
			</item>
		</row>
		<row>
			<item>
				<textField binding="myContact.email1"/>
			</item>
		</row>
		<row>
			<item>
				<textField binding="myContact.mobile"/>
			</item>
		</row>
		<row>
			<item>
				<contentImage binding="myContact.image"/>
			</item>
		</row>
	</form>
	<actions>
		<action className="UpdateMyDetails" displayName="Save" toolTip="Save" relativeIconFileName="actions/Save.gif" />
	</actions>
</view>
